@model IEnumerable<HouseholdManager.Models.ViewModels.FullMissionViewModel>

@{
    ViewData["Title"] = "Missions";
}

<h1>All Missions</h1>

@await Html.PartialAsync("_CreationButtonsPartial")

<div class="row">
    <div class="col-md-20">
        <ejs-grid id="missions" dataSource="@Model" gridLines="None"
            allowSorting="true" allowPaging="true" showColumnChooser="true">
            <e-grid-pagesettings pageSize="10"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column headerText="Mission" field="Name" width="15%"></e-grid-column>
                <e-grid-column headerText="Room" template="#roomNameTemplate" width="15%"></e-grid-column>
                <e-grid-column headerText="Points" field="Point" width="8%"></e-grid-column>
                <e-grid-column headerText="Due Date" field="DueDate" width="15%"></e-grid-column>
                <e-grid-column headerText="Member" template="#memberNameTemplate" width="17%"></e-grid-column>
                <e-grid-column headerText="Edit | Details | Delete" template="#actionColumnTemplate" width="25%"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
</div>

<script id="memberNameTemplate" type="text/x-template">
    <text class="icon-font">${MemberIcon}</text> <text>${MemberName}</text>
</script>

<script id="roomNameTemplate" type="text/x-template">
    <text class="icon-font">${RoomIcon}</text> <text>${RoomName}</text>
</script>


<script id="actionColumnTemplate" type="text/x-template">
    <div class="d-flex flex-row justify-content-start">
        <a class="btn btn-sm btn-primary mx-1" href="/Mission/Edit/${Id}">
            <i class="fa-solid fa-pen"></i>
        </a>
        <a class="btn btn-sm btn-secondary mx-1" href="/Mission/Details/${Id}">
            <i class="fa-solid fa-list-check"></i>
        </a>
        <form action="/Mission/Delete/${Id}" method="post">
        @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-sm btn-warning mx-1"
            onclick="return confirm(&quot;Are you sure you want to delete this record?&quot;)">
                <i class="fa-solid fa-trash-can"></i>
            </button>
        </form>
    </div>
</script>



