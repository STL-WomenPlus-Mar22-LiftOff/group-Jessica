@model HouseholdManager.Models.ViewModels.FullMissionViewModel

@{
    ViewData["Title"] = "Delete Mission";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Mission</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-8">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-8">
            @Html.DisplayNameFor(model => model.RoomName)
        </dt>
        <dd class="col-sm-10">
            <text class="icon-font">@Html.DisplayFor(model => model.RoomIcon)</text> @*trailing space here is intentional*@
            @Html.DisplayFor(model => model.RoomName)
        </dd><br />
        <dt class = "col-sm-8">
            @Html.DisplayNameFor(model => model.Point)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Point)
        </dd>
        <dt class="col-sm-8">
            @Html.DisplayNameFor(model => model.DueDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DueDate)
        </dd>
        <dt class="col-sm-8">
            @Html.DisplayNameFor(model => model.MemberName)
        </dt>
        <dd class="col-sm-10">
            <text class="icon-font">@Html.DisplayFor(model => model.MemberIcon)</text> @*trailing space here is intentional*@
            @Html.DisplayFor(model => model.MemberName)
        </dd>
    </dl>

    <div class="row mt-2">
        <div class="col-md-6">
            <div class="form-group">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-primary w-100"> <i class="fa-solid fa-xmark"></i> Delete</button>
                </form>
            </div>
        </div>
        <div class="col-md-6">
            <a asp-action="Index" class="btn btn-secondary w-100"> <i class="fa-solid fa-arrow-left"></i> Back to List</a>
        </div>
    </div>
</div>
