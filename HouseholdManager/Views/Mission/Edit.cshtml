@model HouseholdManager.Models.ViewModels.EditMissionViewModel

@{
    ViewData["Title"] = "Edit Mission";
}

<h1>Edit</h1>

<h4>Mission</h4>

<p>
    <a asp-controller="Room" asp-action="Create" class="btn btn-sm btn-outline-option mx-2"> <i class="fa-solid fa-plus"></i> Create a Room</a>
    <a asp-controller="Member" asp-action="Invite" class="btn btn-sm btn-outline-option mx-2"> <i class="fa-regular fa-envelope"></i> Invite a Member</a>
</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomId" class="control-label"></label>
                <select asp-for="RoomId" class="form-control" asp-items="ViewBag.Rooms"></select>
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Point" class="control-label"></label>
                <input asp-for="Point" class="form-control" />
                <span asp-validation-for="Point" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DueDate" class="control-label"></label>
                <input asp-for="DueDate" class="form-control" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <ejs-dropdownlist id="ddlUser" ejs-for="MemberId"
                    dataSource="@ViewBag.Members" placeholder="User"
                    floatLabelType="Always" allowFiltering="true" ignoreAccent="true"
                    filterType="Contains" popupHeight="220px">
                    <e-dropdownlist-fields value="Id" text="Name"></e-dropdownlist-fields>
                </ejs-dropdownlist>
                <span asp-validation-for="MemberId" class="text-danger" fs-6></span>
            </div>
            <div class="row mt-2">
                <div class="col-md-6">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary w-100"> <i class="fa-solid fa-floppy-disk"></i> Save</button>
                    </div>
                </div>
                <div class="col-md-6">
                    <div>
                        <a asp-action="Index" class="btn btn-secondary w-100"> <i class="fa-solid fa-arrow-left"></i> Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
