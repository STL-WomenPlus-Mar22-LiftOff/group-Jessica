<div>
    <hr class="homepage-break">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MissionName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MissionName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Room)
