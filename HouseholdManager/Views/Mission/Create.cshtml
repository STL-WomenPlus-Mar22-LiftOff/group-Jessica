@model HouseholdManager.Models.Mission

@{
    ViewData["Title"] = "Create Mission";
}

<h3>Create a Mission</h3>
@await Html.PartialAsync("_CreationButtonsPartial")
<div class="row">
    <div class="col-md-7">
        <div class="widget p-5 form-bg">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MissionName" class="control-label">Mission Name</label>
                <input asp-for="MissionName" class="form-control" />
                <span asp-validation-for="MissionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomId" class="control-label"></label>
                <select asp-for="RoomId" class ="form-control" asp-items="ViewBag.RoomId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Point" class="control-label"></label>
                <input asp-for="Point" class="form-control" />
                <span asp-validation-for="Point" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DueDate" class="control-label">Due Date</label>
                <input asp-for="DueDate" class="form-control" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Completed" class="control-label">Completed</label>
                <input asp-for="Completed" data-val="true" data-val-required="The Completed field is required." id="Completed" name="Completed" type="checkbox" value="true" />
                <input name="Completed" type="hidden" value="false" />
            </div>
            <div class="mb-3">
                <ejs-dropdownlist id="ddlUser" ejs-for="MemberId"
                    dataSource="@ViewBag.Members" placeholder="User"
                    floatLabelType="Always" allowFiltering="true" ignoreAccent="true"
                    filterType="Contains" popupHeight="220px">
                    <e-dropdownlist-fields value="MemberId" text="UserName"></e-dropdownlist-fields>
                </ejs-dropdownlist>
                <span asp-validation-for="MemberId" class="text-danger" fs-6></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary form-button"> <i class="fa-solid fa-floppy-disk"></i> Create</button>
                <a asp-action="Index" class="btn btn-secondary form-button"> <i class="fa-solid fa-arrow-left"></i> Back to List</a>
            </div>
            
        </form>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
