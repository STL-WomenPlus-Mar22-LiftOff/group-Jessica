@model HouseholdManager.Models.ViewModels.EditRoomViewModel

@{
    ViewData["Title"] = "Create Room";
}

<h3>Create a Room</h3>
<p>
    <a asp-controller="Mission" asp-action="Create" class="btn btn-sm btn-outline-option mx-2"> <i class="fa-solid fa-plus"></i> Create a Mission</a>
    <a asp-controller="Member" asp-action="Invite" class="btn btn-sm btn-outline-option mx-2"> <i class="fa-regular fa-envelope"></i> Invite a Member</a>
</p>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Icon" class="control-label"></label>
                <input asp-for="Icon" id="iconInput" class="form-control" hidden />
                @await Html.PartialAsync("_IconMenuPartial")
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>

            <div class="row mt-2">
                <div class="col-md-6">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary w-100"> <i class="fa-solid fa-floppy-disk"></i> Submit</button>
                    </div>
                </div>
                <div class="col-md-6">
                    <div>
                        <a asp-action="Index" class="btn btn-secondary w-100"> <i class="fa-solid fa-arrow-left"></i> Cancel</a>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
