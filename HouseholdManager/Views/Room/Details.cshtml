@model HouseholdManager.Models.ViewModels.EditRoomViewModel
@using HouseholdManager.Data.API

@{
    ViewData["Title"] = "Room Details";
    var req = new IconRequestor();
    string iconMouseOverText = await req.GetMouseoverTextForIcon(ViewData.Model.Icon,
                                                                 (IEnumerable<Icon>)ViewBag.Icons);
}

<h3>Details</h3>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Icon)
        </dt>
        <dd class = "col-sm-10" title=@iconMouseOverText>
            <span>
                <label class="icon-font">@Html.DisplayFor(model => model.Icon)</label>
                <label class="icon-slug-display-small">@iconMouseOverText</label>
            </span>
        </dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-sm btn-success mx-2"> <i class="fa-solid fa-pen-to-square"></i> Edit This Room</a>
    <a asp-controller="Mission" asp-action="Create" class="btn btn-sm btn-success mx-2"> <i class="fa-solid fa-plus"></i> Create a Mission</a>
    <a asp-controller="Member" asp-action="AddOrEdit" class="btn btn-sm btn-success mx-2"> <i class="fa-solid fa-plus"></i> Invite a Member</a>
 </p>
 <p>
    <a asp-action="Index" class="btn btn-sm btn-success mx-2"> <i class="fa-solid fa-left-to-line"></i> Back to List</a>
 </p>

