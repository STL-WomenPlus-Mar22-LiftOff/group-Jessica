@model HouseholdManager.Models.ViewModels.EditRoomViewModel
@using HouseholdManager.Data.API

@{
    ViewData["Title"] = "Room Details";
    var req = new IconRequestor();
    string iconMouseOverText = await req.GetMouseoverTextForIcon(ViewData.Model.Icon,
                                                                 (IEnumerable<Icon>)ViewBag.Icons);
}

<h3>Details</h3>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Icon)
        </dt>
        <dd class = "col-sm-10" title=@iconMouseOverText>
            <span>
                <label class="icon-font">@Html.DisplayFor(model => model.Icon)</label>
                <label class="icon-slug-display-small">@iconMouseOverText</label>
            </span>
        </dd>
    </dl>
    <div class="row mt-2">
        <div class="col-md-6">
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success w-100"> <i class="fa-solid fa-pen-to-square"></i> Edit This Room</a>
            </div>
        </div>
        <div class="col-md-6">
            <div>
                <a asp-action="Index" class="btn btn-secondary w-100"> <i class="fa-solid fa-arrow-left"></i> Cancel</a>
            </div>
        </div>
    </div>
</div>
