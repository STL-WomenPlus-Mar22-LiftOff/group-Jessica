@model IEnumerable<HouseholdManager.Models.Send>

@{
    ViewData["Title"] = "Notification";
}

<h1>Create a Message</h1>

@await Html.PartialAsync("_CreationButtonsPartial")

<div class="row">
    <div class="col-md-15">
        <ejs-grid id="missions" dataSource="@Model" gridLines="None"
                  allowSorting="true" allowPaging="true" showColumnChooser="true" CheckboxOnly="true" PersistSelection="true">
            <e-grid-pagesettings pageSize="10"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column headerText="Name" field="Name" width="15%"></e-grid-column>
                <e-grid-column headerText="Phone Number" field="Phone Number" width="10%"></e-grid-column>
                <e-grid-column headerText="Message" field="Message" width="15%"></e-grid-column>
                
                <e-grid-column headerText="Actions" template="#actionColumnTemplate" width="15%"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>

    </div>
</div>

<script id="actionColumnTemplate" type="text/x-template">
    <div class="d-flex flex-row justify-content-start">
        <a class="btn btn-sm btn-primary mx-1" href="/Send/Edit/${SendId}">
            <i class="fa-solid fa-pen fa-lg"></i>
        </a>
        <a class="btn btn-sm btn-secondary mx-1" href="/Send/Details/${SendId}">
            <i class="fa-solid fa-list-check"></i>
        </a>
        <form action="/Send/Delete/${SendId}" method="post">
    @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-sm btn-warning mx-1"
            onclick="return confirm(&quot;Are you sure you want to delete this record?&quot;)">
                <i class="fa-solid fa-trash-can"></i>
            </button>
        </form>
    </div>
</script>