@using Microsoft.AspNetCore.Identity
@using HouseholdManager.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a asp-area="" asp-controller="Admin" asp-action="Index" title="Manage" class="nav-link text-dark">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <a asp-controller="Account" asp-action="Logout" class="nav-link btn btn-link">Logout</a>
    </li>
}
else
{
    <li>
        <a asp-area="" asp-controller="Admin" asp-action="Create" title="Manage" class="nav-link text-dark">Register</a>
    </li>
    <li>
        <a asp-area="" asp-controller="Account" asp-action="Login" title="Manage" class="nav-link text-dark">Log in</a>
    </li>
    <li class="nav-item">
        <a asp-controller="Account" asp-action="Logout" class="nav-link btn btn-link">Logout</a>
    </li>
}
</ul>
