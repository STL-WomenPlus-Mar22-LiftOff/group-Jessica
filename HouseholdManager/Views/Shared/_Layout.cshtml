<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!--This is to prevent an undesirable white "flash of unstyled content" when the page loads in dark mode-->
    <!--It hides the body of the page, runs a fast check for dark mode, and then hands control over to the theme picker script-->
    <style>
        head, body {
            visibility: hidden;
            opacity: 0;
        }
    </style>
    <script id="stopWhiteFlashScript" type="text/javascript">
        (function () {
            const userTheme = localStorage.getItem('user-theme');
            if (userTheme === 'dark') {
                const topElement = document.documentElement;
                topElement.setAttribute('data-bs-theme', 'dark');
            }
        })();
    </script>
    <script id="themePickerScript" src="~/js/themePicker.js"></script>
    <title>@ViewData["Title"] - HouseholdManager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <!-- Syncfusion ASP.NET Core controls styles -->
    <link id="cssfile" href="https://cdn.syncfusion.com/ej2/20.4.38/bootstrap5.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Syncfusion ASP.NET Core controls scripts -->
    <script src="https://cdn.syncfusion.com/ej2/20.4.38/dist/ej2.min.js"></script>
</head>
<body>
    <!--Safeguard in case JavaScript is disabled-->
    <noscript>
        <style>
            head, body {
                visibility: visible;
                opacity: 1;
            }
        </style>
    </noscript>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HouseholdManager</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Room" asp-action="Index">Rooms</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Mission" asp-action="Index">Missions</a>
                        </li>
                    </ul>
                </div>
            </div>
            @await Html.PartialAsync("_ThemePickerPartial")
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - HouseholdManager - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!-- Syncfusion Script Manager -->
    <ejs-scripts></ejs-scripts>

</body>
</html>
