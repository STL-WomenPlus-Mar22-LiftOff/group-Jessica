<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Household Manager</title>
    <!-- Syncfusion ASP.NET Core controls scripts -->
    <script src="https://cdn.syncfusion.com/ej2/20.4.38/dist/ej2.min.js"></script>

    <!--STYLE SHEETS-->
    <!-- Syncfusion ASP.NET Core controls styles -->
    <link id="cssfile" href="https://cdn.syncfusion.com/ej2/20.4.38/bootstrap5-dark.css" rel="stylesheet" />
    <!-- Customized SASS version of Bootstrap-->
    <link id="bootstrap" rel="stylesheet" href="~/scss/bootstrap-custom.css" asp-append-version="true">
    <!-- Other style sheets -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!--FONTS-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700&display=swap" rel="stylesheet">

</head>
<body class="e-bigger">    
    <!--This is to prevent an undesirable white "flash of unstyled content" when the page loads in dark mode-->
    <!--It hides the body of the page, runs a fast check for dark mode, and then hands control over to the theme picker script-->
    <style>
        head, body {
            visibility: hidden;
            opacity: 0;
        }
    </style>
    <script id="stopWhiteFlashScript" asp-src-include="~/js/stopWhiteFlash.js"></script>
    <script id="themePickerScript" asp-src-include="~/js/themePicker.js"></script>

    <!--Safeguard in case JavaScript is disabled-->
    <noscript>
        <style>
            head, body {
                visibility: visible;
                opacity: 1;
            }
        </style>
    </noscript>
    <header class="bg-body-secondary">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Household Manager</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>
                </div>
                <partial name="_LoginPartial" />
            </div>
            @await Html.PartialAsync("_ThemePickerPartial")
        </nav>
    </header>

    <div class="main=content">
        <div class="container mt-5">
            <div class="row">
                <div class="@(ViewData["isDashboard"] == null?"col-md-10":"col-md-14")">
                    <main role="main" class="pb-3">
                        @if (ViewData["isDashboard"] == null)
                        {
                            <div class="row">
                                <div class="col-md-7">
                                    <div class="d-flex flex-column mb-5">
                                        <div class="d-flex mb-1">
                                            <div class="flex-grow-1">
                                                <h3 class="fw-bold">@ViewData["PageTitle"]</h3>
                                            </div>
                                            <div>
                                                @if (ViewData["PageActionText"] != null)
                                                {
                                                    <a class="btn btn-success" href="@ViewData["PageActionUrl"]">
                                                        @ViewData["PageActionText"]
                                                    </a>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    </div>




    <script asp-src-include="~/lib/jquery/dist/jquery.min.js"></script>
    <script asp-src-include="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script asp-src-include="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!-- Syncfusion Script Manager -->
    <ejs-scripts></ejs-scripts>
</body>
</html>